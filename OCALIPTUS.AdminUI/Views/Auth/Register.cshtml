@using Microsoft.AspNetCore.Mvc.TagHelpers
@using OCALIPTUS.Application.CommonValues.Queries.Dtos
@model RegisterCommonValuesModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Ekranı</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    height: 100vh;
                    background-color: #f8f9fa;
                    background-image: url('https://hsgm.saglik.gov.tr/images/cache/thumbs/0f418cfd1acfc73c9346e7d0f04037a8.png');
                    background-position: center;
                    background-repeat: no-repeat;
                    background-size: cover;
                }
    </style>

</head>
<body>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">ÖZEL ATALI HASTANESİ</h2>
                    <h5 class="text-center mb-3">Randevu Sistemi Yönetici Kayıt Ekranı</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="/Auth/Register" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="FirstName" style="font-weight: bolder;">Adınız</label>
                                    <input type="text" class="form-control" id="FirstName" name="FirstName" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Surname" style="font-weight: bolder;">Soyadınız</label>
                                    <input type="text" class="form-control" id="Surname" name="Surname" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Age" style="font-weight: bolder;">Yaşınız</label>
                                    <input type="number" class="form-control" id="Age" name="Age" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="IdentityNumber" style="font-weight: bolder;">Kimlik Numaranız</label>
                                    <input type="text" class="form-control" id="IdentityNumber" name="IdentityNumber" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Gender" style="font-weight: bolder;">Cinsiyetiniz</label>
                                    <select class="form-control" id="Gender" name="Gender" required>
                                        @foreach (KeyValueModel kvp in Model.Genders)
                                        {
                                            if (kvp.Key == 2)
                                            {
                                                <option value="@kvp.Key" selected>@kvp.Value</option>
                                            }
                                            else
                                            {
                                                <option value="@kvp.Key">@kvp.Value</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Nationality" style="font-weight: bolder;">Milliyetiniz</label>
                                    <select class="form-control" id="Nationality" name="Nationality" required>
                                        @foreach (KeyValueModel kvp in Model.Nationalities)
                                        {
                                            if (kvp.Key == 181)
                                            {
                                                <option value="@kvp.Key" selected>@kvp.Value</option>
                                            }
                                            else
                                            {
                                                <option value="@kvp.Key">@kvp.Value</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Birthdate" style="font-weight: bolder;">Doğum Tarihiniz</label>
                                    <input type="date" class="form-control" id="Birthdate" name="Birthdate" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Phone" style="font-weight: bolder;">Cep Telefonunuz</label>
                                    <input type="tel" class="form-control" id="Phone" name="Phone" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Email" style="font-weight: bolder;">E-Posta</label>
                                    <input type="email" class="form-control" id="Email" name="Email" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Password" style="font-weight: bolder;">Şifre</label>
                                    <input type="password" class="form-control" id="Password" name="Password" required>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Photo" style="font-weight: bolder;">Fotoğrafınız</label>
                                    <input type="file" class="form-control-file" id="Photo" name="Photo">
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group" hidden>
                            <label for="MemberStatus">Üye Durumu</label>
                            <select class="form-control" id="MemberStatus" name="MemberStatus" required>
                                <option value="1" selected>Onay Bekliyor</option>
                            </select>
                        </div>
                        <div class="form-group mt-5 mb-5" hidden>
                            <label for="RoleName">Rol Adı</label>
                            <input type="text" class="form-control" id="RoleName" name="RoleName" value="Admin">
                        </div>
                        
                        <div class="row d-flex justify-content-center mt-3">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-success btn-block w-100">Kayıt Olun</button>
                            </div>
                            <div class="col-md-6">
                                <a href="/Auth/Login" class="btn btn-danger btn-block w-100">İptal</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
