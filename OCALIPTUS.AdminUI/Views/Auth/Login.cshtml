@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Giriş Yapın</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f8f9fa;
            background-image: url('https://hsgm.saglik.gov.tr/images/cache/thumbs/0f418cfd1acfc73c9346e7d0f04037a8.png');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
        .login-container {
            width: 100%;
            max-width: 600px;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .login-container h2 {
            margin-bottom: 20px;
        }
        .login-container .form-group {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>

<div class="login-container">
    <div class="row d-flex justify-content-center">
        <img class="rounded-3 rounded-circle" style="width: 250px; height: 250px;" src="https://media3.giphy.com/media/fRg1cJrI9Sfb7Z1MS3/giphy.gif"/>
    </div>
    <h2 class="text-center">ÖZEL ATALI HASTANESİ</h2>
    <h5 class="text-center mb-5">Randevu Sistemi Yönetici Giriş Ekranı</h5><hr/>
    <form method="post" action="/Auth/Login">
        <div class="form-group">
            <label for="email">E-Posta Adresiniz</label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp">
        </div>
        <div class="form-group">
            <label for="password">Şifreniz</label>
            <input type="password" class="form-control" id="password">
            <!--<a href="#">Şifrenizi mi unuttunuz?</a> TODO-->  
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-md-6">
                <button type="submit" class="btn btn-success btn-block w-100">Giriş Yapın</button>
            </div>
        </div>
        <div class="text-center mt-3">
            <a href="/Auth/Register">Üye değil misiniz ?</a>
        </div>
    </form>
</div>
</body>
</html>

<script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>